
<div class="container">

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <tr>
            <th class="text-center">Número</th>
            <th>Nombre</th>
            <th class="text-center">Reservar</th>
            <% if admin_signed_in? %>
              <th>Editar</th>
              <th>Mostrar</th>
            <% end %>
          </tr>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <% if user.vacio? %>
                  <td class="text-center active"><%= user.number %></td>
                  <td class="active"><%= user.name %></td>
                  <td class="text-center active"><%= link_to "Reservar", lista_path(user) %></td>
                <% end %>

                <% if user.reservado? %>
                  <td class="text-center danger"><%= user.number %></td>
                  <td class="danger">Por Confirmar</td>
                  <td class="danger"></td>
                <% end %>

                <% if user.ocupado? %>
                  <td class="text-center info"><%= user.number %></td>
                  <td class="info"><%= user.name %></td>
                  <td class="info"></td>
                <% end %>

                <% if admin_signed_in? %>
                  <td><%= link_to 'Edit', lista_path(user) %></td>
                  <td><%= link_to 'Show', user %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-md-1"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-right">
      <% if admin_signed_in? %>
         <%= link_to "Logout", destroy_admin_session_path, method: :delete%>
      <% else %>
        <%= link_to "Iniciar Sesión", new_admin_session_path%> |
        <%= link_to "Registrarse", new_admin_registration_path %>
      <% end %>
    </div>
  </div>






</div>
